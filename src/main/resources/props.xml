<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="myCLI" class="com.zhandos.SOLIDBankApp.MyCLI">
    </bean>

    <bean id="accountDAO" class="com.zhandos.SOLIDBankApp.MemoryAccountDAO">
    </bean>

    <bean id="accountCreation" class="com.zhandos.SOLIDBankApp.businessProcessInterfaceImpl.AccountCreationServiceImpl">
        <constructor-arg ref="accountDAO"/>
    </bean>

    <bean id="accountListing" class="com.zhandos.SOLIDBankApp.businessProcessInterfaceImpl.AccountListingServiceImpl">
        <constructor-arg ref="accountDAO"/>
    </bean>

    <bean id="bankCore" class="com.zhandos.SOLIDBankApp.BankCore">
        <constructor-arg ref="accountCreation"/>
    </bean>

    <bean id="accountBasicCLI" class="com.zhandos.SOLIDBankApp.cli.AccountBasicCLI">
        <constructor-arg ref="myCLI"/>
        <constructor-arg ref="bankCore"/>
        <constructor-arg ref="accountListing"/>
    </bean>

</beans>